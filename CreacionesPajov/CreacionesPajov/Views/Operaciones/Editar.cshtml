@model CreacionesPajov.WEB.Models.Entities.Operacion
@{ Layout = null; }


<h1>@ViewBag.Titulo</h1>
<br />

<style>
    span.text-danger.field-validation-error, #Nombre-error, #Descripcion-error, #TipoOperacionId-error, #SAM-erro {
        font-size: 12px;
    }
</style>


<input type="hidden" asp-for="OperacionId" />
<input type="hidden" asp-for="Estado" />

<body style="background-color: #eee;">

    <form asp-action="Editar" id="formulario" onsubmit="return jQueryAjaxPost(this, 'Editar operación','¿Desea Editar la operación?'); ">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="column">
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input type="hidden" asp-for="OperacionId" />
                    <input type="text" asp-for="Nombre" class="input-editar form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="column">
                <div class="form-group column2">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <input type="text" asp-for="Descripcion" class="input-editar form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="column">
                <div class="form-group">
                    <label asp-for="TipoOperacionId" class="control-label"></label>
                    <select asp-for="TipoOperacionId" asp-items="ViewBag.TiposOperacion" class="input-editar form-control">
                        <option disabled selected>----Seleccione----</option>
                    </select>
                    <span asp-validation-for="TipoOperacionId" class="text-danger"></span>
                </div>
            </div>
            <div class="column">
                <div class="form-group column2">
                    <label asp-for="SAM" class="control-label"></label>
                    <input type="text" asp-for="SAM" class="input-editar form-control" />
                    <span asp-validation-for="SAM" class="text-danger"></span>
                </div>
            </div>
        </div>
        <br />
        <center>
            <div class="form-group">
                <input type="submit" value="Editar Operación" class="btn boton-editar" />
            </div>
        </center>
        <br />
    </form>
