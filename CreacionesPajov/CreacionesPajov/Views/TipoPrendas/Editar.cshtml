@model CreacionesPajov.WEB.Models.Entities.TipoPrenda
@{

    Layout = null;
}


<h1>@ViewBag.Titulo</h1>
<br />

<link rel="icon" href="~/adminlte/dist/img/fav.ico">
<input type="hidden" asp-for="TipoPrendaId" />


<body style="background-color: #eee;">
    <br>
    <form asp-action="Editar" id="formulario" onsubmit="return jQueryAjaxPost(this, 'Editar Tipo De Prenda','¿Desea Editar el tipo de prenda?'); ">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nombre" class="control-label"></label>
            <input type="hidden" asp-for="TipoPrendaId" />
            <input type="text" asp-for="Nombre" class="input-editar-td form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <br />
        <center>
            <div class="form-group">
                <input type="submit" value="Editar Tipo De Prenda" class="btn boton-editar" />
            </div>
        </center>
        <br />
    </form>

</body>

