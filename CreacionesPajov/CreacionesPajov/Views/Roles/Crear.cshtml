@model CreacionesPajov.WEB.Models.Dtos.Roles.CrearRolDto

@{
    Layout = null;
}


<div class="row">
    <div class="col-md-12">
        <form id="formulario" asp-action="Crear" onsubmit="return jQueryAjaxPost(this, 'Crear rol', '¿Desea crear el rol?')" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Rol" class="control-label"></label>
                <input asp-for="Rol" class="input-crear-td form-control" />
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <center>
                    <input type="submit" value="Guardar" class="btn boton-crear" id="submit-all" />
                </center>
            </div>
        </form>
    </div>
</div>

<script src="~/js/site.js"></script>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
