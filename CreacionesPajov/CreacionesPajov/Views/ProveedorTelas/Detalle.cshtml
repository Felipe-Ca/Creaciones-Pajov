@model CreacionesPajov.WEB.Models.Entities.ProveedorTela
@{
    Layout = null;
}


<body style="background-color: #eee;">
    <form>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <center><br />
            <table class="detalle table-striped">
                <tbody>
                    <tr>
                        <td><label asp-for="NIT" class="control-label"></label></td>
                        <td>@Model.NIT</td>
                    </tr>
                    <tr>
                        <td><label asp-for="Nombre" class="control-label"></label></td>
                        <td>@Model.Nombre</td>
                    </tr>
                    <tr>
                        <td><label asp-for="Direccion" class="control-label"></label></td>
                        <td> @Model.Direccion</td>
                    </tr>
                    <tr>
                        <td><label asp-for="Email" class="control-label"></label></td>
                        <td> @Model.Email</td>
                    </tr>
                    <tr>
                        <td><label asp-for="Telefono" class="control-label"></label></td>
                        <td> @Model.Telefono</td>
                    </tr>
                </tbody>
            </table>
        </center>
        <br />
    </form>

</body>

<script src="~/js/site.js"></script>
@await Html.PartialAsync("_ValidationScriptsPartial")