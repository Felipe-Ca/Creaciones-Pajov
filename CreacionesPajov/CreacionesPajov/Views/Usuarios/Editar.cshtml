@model CreacionesPajov.WEB.Models.Dtos.Usuarios.UsuarioAsignRol

@{
    Layout = null;
}

<link rel="icon" href="~/adminlte/dist/img/fav.ico">
<div class="row">
    <div class="col-md-12">
        <form id="formulario" asp-action="Editar" onsubmit="return jQueryAjaxPost(this, 'Editar usuario', '¿Desea editar el usuario?')" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />


            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" readonly class="input-editar-td form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rol" class="control-label"></label>
                <select asp-items="@ViewBag.ListaRoles" asp-for="Rol" class="input-editar-td form-control">
                    <option disabled>--- Seleccione ---</option>
                </select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>

            <center>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn boton-editar" id="submit-all" />
                </div>
            </center>
        </form>
    </div>
</div>

<script src="~/js/site.js"></script>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}