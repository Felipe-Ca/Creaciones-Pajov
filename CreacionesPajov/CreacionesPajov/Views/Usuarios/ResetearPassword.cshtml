<body class="hold-transition login-page">
    <div class="login-box">
        <div class="card card-outline">
            <center>
                <img class="img-logo-cont" style="margin-top: -90px; width:200px; height:180px;" src="~/adminlte/dist/img/logo transparente.png" />
            </center>
            <div class="card-header text-center">
                <h3>Creaciones PAJOV</h3>
            </div>
            <div class="card-body c-resetear" style="margin-left: 20px; margin-right: 20px;">
                <p class="login-box-msg">Ingrese la nueva contraseña.</p>
                <form asp-action="ResetearPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Token" type="hidden" />
                    <input asp-for="Email" type="hidden" />
                    <div class="input-group mb-3">
                        <input asp-for="Password" type="password" class="input-login form-control" placeholder="Ingrese la contraseña">
                        <div class="input-group-append">

                        </div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="input-group mb-3">
                        <input asp-for="ConfirmarPassword" type="password" class="input-login form-control" placeholder="Confirmar contraseña">
                        <div class="input-group-append">

                        </div>
                    </div>
                    <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
                    <div class="row">
                        <div class="col-12">
                            <center><button type="submit" style="width:200px;" class=" btn boton-crear btn-block">Cambiar contraseña</button></center>
                        </div>

                    </div>
                </form>
                <p class="mt-3 mb-1">
                    <center><u><a style="color: #26798E;" asp-action="Login" asp-controller="Usuarios">Login</a></u></center>
                </p>
            </div>

        </div>
    </div>


    <script src="~/adminlte/plugins/jquery/jquery.min.js"></script>

    <script src="~/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="~/adminlte/dist/js/adminlte.min.js?v=3.2.0"></script>
