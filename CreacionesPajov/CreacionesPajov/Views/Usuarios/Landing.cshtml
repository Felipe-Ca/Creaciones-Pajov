@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Landing Page</title>
    <link rel="icon" href="~/adminlte/dist/img/fav.ico">
    <link rel="stylesheet" href="~/css/landing.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<style>

    * {
        overflow-x: hidden;
    }

    a{
        color: white;
    }
    h1,h2,h3,h4,h5,h6,p,a {
        font-family: Gravity;
    }

    h2{
        font-weight: bold;
    }

    .content {
        background: white;
    }

    .navbar {
        position: absolute;
        width: 100%;
        top: 0;
        left: 0;
        background-color: transparent !important;
        color: white !important;
        z-index: 1000;
    }

        .navbar a {
            color: white !important;
        }

    /* header */

    .img-header {
        position: relative;
        background: no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        height: 107vh;
        clip-path: polygon(0 0, 100% 0, 100% 100%, 0 91%);
    }


    header img {
        width: 100%;
        height: 100%;
    }

    header .content {
        position: absolute;
        z-index: 5;
        height: 100%;
        width: 100%;
    }


        header .content > div:first-of-type {
            height: 100%;
            width: 60%;
            margin: 0 auto;
            text-align: center;
            color: white;
        }

            header .content > div:first-of-type h1 {
                margin-bottom: 20px;
                margin-top: 50%;
            }

    header .content {
        background-color: rgba(0,0,0, .3);
        width: 100%;
        height: 100%;
    }

        header .content a {
            width: 170px;
            border: 2px solid #5b66ff;
            margin-top: 30px;
            text-align: right;
            color: white;
        }

    /* Sección 1: Creaciones PAJOV */
    .figura-pajov {
        background-color: rgba(0, 0, 0, 0.933);
        clip-path: polygon(0 70%, 100% 39%, 100% 100%, 0 100%);
        width: 100%;
        height: 200px;
    }

    .seccion-pajov {
        width: 100%;
        height: 650px;
        background-color: rgba(255, 255, 255, 0.933);
    }

    .principal {
        margin-top: 80px;
    }

    .col-text {
        margin-top: 50px;
    }

    .col-img {
        margin-left: 90px;
    }


    /* Sección 2: sobre nosotros */


    .seccion-nosotros {
        width: 100%;
        height: 820px;
        background-color: rgba(0, 0, 0, 0.933);
        color: white;
        clip-path: polygon(0 0, 100% 0, 100% 100%, 0 91%);
    }


    .contenedor-carrousel {
        width: 550px;
        height: 550px;
        padding-right: 30px;
    }

    .column {
        margin-right: 90px;
    }


    /* Sección 3: ingresar */

    .seccion-ingresar {
        width: 100%;
        height: 50vh;
        background-color: white;
    }


    .titulo-login {
        margin-top: 15vh;
        color: #288e;
        font-family: Gravity;
        font-weight: bolder;
    }

    .btn-login {
        padding-top: 12px;
        width: 400px;
        height: 60px;
        background-color: transparent;
        color: #288e;
        font-size: 20px;
        font-family: Gravity;
        font-weight: bolder;
        border-radius: 169px 169px 169px 169px;
        border: 2px solid #288e;
    }


        .btn-login:hover {
            background-color: #288e;
            color: white;
        }


    /* Footer */
    .figura-footer {
        background-color: #288e;
        clip-path: polygon(0 70%, 100% 39%, 100% 100%, 0 100%);
        width: 100%;
        height: 200px;
        margin-top: 20px;
    }

    .footer {
        width: 100%;
        height: 60vh;
        background-color: #288e;
        color: white;
    }

    .footer-emp {
        margin-top: 50px;
        margin-left: 80px;
    }


    .c1, .c2, .c3 {
        margin-top: 70px;
        margin-left: 60px;
    }


    .copy {
        display: inline-block;
        color: rgba(151, 228, 228, 0.933);
        margin-top: -10px;
    }
</style>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container" style="margin-top: 30px;">
            <a class="navbar-brand" href="#">Creaciones PAJOV</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="#pajov">PAJOV</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#nosotros">Sobre nosotros</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#ingresar">Ingresar</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <header id="home">
        <div style="background-color: transparent;" class="content">
            <div class=" d-flex align-items-center flex-column">
                <h1 class="h1">¡Bienvenido a Creaciones PAJOV!</h1>
                <p>Siempre es bueno tenerte por aquí.</p>
            </div>
        </div>
        <img src="~/adminlte/dist/img/21.jpg" class="img-header">
    </header>
   

    <section class="pajov" id="pajov">
        <br><br><br>
        <div class="seccion-pajov container-fluid">
            <div class="principal container">
                <div class="row">
                    <div class="col-text col-6">
                        <h2>PAJOV: nuestro lugar seguro  (⸝⸝ᵕᴗᵕ⸝⸝) </h2>
                        <h3>El aplicativo de Creaciones PAJOV, está especialmente diseñado para brindarle al usuario una sensación de comodidad en cada momento y en cada una de sus ventanas con una interfaz sencilla y fácil de usar para reducir los niveles de fatiga durante su uso.</h3>
                    </div>
                    <div class="col-img col">
                        <img class="logo-animation" src="~/adminlte/dist/img/logot.png">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="figura-pajov"></div>
    <section id="nosotros">
        <div class="seccion-nosotros container-fluid">
            <div class="principal container">
                <br><br>
                <div class="row">
                    <div class="col-6 col-text">
                        <div class="contenedor-carrousel">
                            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-inner">
                                    <div class="carousel-item active">

                                        <img src="~/adminlte/dist/img/ej.png" class="d-block w-100" alt="...">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/adminlte/dist/img/ej.png" class="d-block w-100" alt="...">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/adminlte/dist/img/ej.png" class="d-block w-100" alt="...">
                                    </div>
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <h2>El proyecto se llama igual que la empresa...</h2>
                        <h5>
                            Debido a que nuestro proyecto, va dirigido a una empresa textil familiar la cual durante sus largos años de existencia y progreso ha cambiado su nombre en multiples ocasiones; finalmente, en el 2015, su nombre oficial pasó a ser 'Creaciones PAJOV'. Nuestro equipo de proyecto, decidió tomar la iniciativa de llamar el aplicativo de igual manera que esta, ya que tiene un significado especial, porque su nombre se compone principalmente por las siglas de familiares importantes para un miembro de nuestro equipo. En honor a él y a su familia adoptamos dicho nombre...<br><br>
                            <b>PA</b>tricia, <b>JO</b>nathan, <b>V</b>alentina.
                        </h5>
                    </div>

                </div>
            </div>
        </div>
       
    </section>

    <section id="ingresar">
        <div class="seccion-ingresar container-fluid">
            <br><br>
            <div class=" d-flex align-items-center flex-column justify-content-center">
                <h2 class="titulo-login">Comienza a registrar tu producción ~</h2> <br>
                <a  asp-action="Login" asp-controller="Usuarios" class="btn btn-login">Ingresar</a>
            </div>
        </div>
    </section>


    <div class="figura-footer"></div>
    <footer id="footer">
        <div class="footer container-fluid">
            <div class="container">
                <div class="row">
                    <div class="footer-emp col-2">
                        <h3>Creaciones</h3>
                        <h2>PAJOV</h2>

                    </div>

                    <div class="c2 col-2">
                        <h4 style="color: rgba(182, 230, 230, 0.933); ">Ayuda</h4><br>
                        <a href="ManualDeUsuario/manualUsuario.html"><p>Manual de uso</p><br></a>
                        <a href=""><p>Teléfono</p><br></a>
                    </div>
                    <div class="c2 col-2">
                        <h4 style="color: rgba(182, 230, 230, 0.933); ">Objetivos</h4><br>
                        <a href=""><p>Generales</p><br></a>
                        <a href=""><p>Específicos</p><br></a>
                    </div>
                    <div class="c3 col-2">
                        <h4 style="color: rgba(182, 230, 230, 0.933); ">Comunidades</h4><br>
                        <a href=""><p>Más software textil</p></a>
                    </div>
                </div>

            </div><br>

            <hr>
            <br>
            <p class="copy d-flex align-items-center flex-column justify-content-center">© 2022 Creaciones PAJOV. Todos los derechos reservados.</p>
        </div>

        </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="js/carrousel.js"></script>
</body>
</html>