@model CreacionesPajov.WEB.Models.Entities.ColorHilo
@{

    Layout = null;
}


<h1>@ViewBag.Titulo</h1>
<br />



<input type="hidden" asp-for="ColorHiloId" />
<input type="hidden" asp-for="Estado" />

<body style="background-color: #eee;">
    <br>

    <form asp-action="Editar" id="formulario" onsubmit="return jQueryAjaxPost(this, 'Editar Color De Hilo','¿Desea Editar el color de hilo?'); ">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nombre" class="control-label"></label>
            <input type="hidden" asp-for="ColorHiloId" />
            <input type="text" asp-for="Nombre" class="input-editar-td form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <br />

        <center>
            <div class="form-group">
                <input type="submit" value="Editar Color Hilo" class="btn boton-editar" />
            </div>
        </center>
        <br />
    </form>
 
</body>

