@model CreacionesPajov.WEB.Models.Entities.ColorHilo


@{
    Layout = null;
}

<body style="background-color: #eee;">
    <br />
    <form asp-action="Crear" id="formulario" onsubmit="return jQueryAjaxPost (this, 'Crear Color De Hilo','¿Desea crear el color de hilo?'); ">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nombre" class="control-label"></label>
            <input type="text" asp-for="Nombre" class="input-crear-td form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group">
            <center>
                <input type="submit" value="Guardar" class="btn boton-crear" />
            </center>
            
        </div>
        <br />
    </form>

</body>


