@model CreacionesPajov.WEB.Models.Entities.ColorTela

<br />

@{
    Layout = null;
}

<body style="background-color: #eee;">
    <br />
    <form asp-action="Crear" id="formulario" onsubmit="return jQueryAjaxPost (this, 'Crear Color De Tela','¿Desea crear el color de tela?'); ">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nombre" class="control-label"></label>
            <input type="text" asp-for="Nombre" class="input-crear-td form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <br />
        <center>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn boton-crear" />
            </div>
        </center>
        <br />
    </form>

</body>

<script src="~/js/site.js"></script>
@await Html.PartialAsync("_ValidationScriptsPartial")